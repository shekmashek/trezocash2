ALTER TABLE public.profiles
ADD COLUMN IF NOT EXISTS onboardings_seen jsonb;

-- Update RLS policies for profiles table to allow users to update their own onboardings_seen
DROP POLICY IF EXISTS "Users can update their own profile." ON public.profiles;
CREATE POLICY "Users can update their own profile."
ON public.profiles
FOR UPDATE
USING (auth.uid() = id)
WITH CHECK (auth.uid() = id);
